<a class="link" href="{{ href.value }}" {% if href.target %}target="{{ href.target }}"{% endif %}>

	<div class="link__hero">

		<svg class="link__icon link__icon--background color-white"><use xlink:href="#{{ icon }}"></use></svg>
		<svg class="link__icon link__icon--foreground color-white"><use xlink:href="#{{ icon }}"></use></svg>

	</div>

	<div class="link__content">

		<h3 class="h2 color-black">{{ header }}</h3>
		{{ bodytext | safe }}

	</div>

</a>